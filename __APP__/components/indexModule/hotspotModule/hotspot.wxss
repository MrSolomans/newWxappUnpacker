.hotspot_wrap {
    background: #fff;
    border-radius: 20rpx;
    margin: 30rpx auto 0;
    padding-bottom: 30rpx;
    width: 690rpx;
}

.question_top {
    border-bottom: 1px solid #eff2f4;
    padding: 24rpx 30rpx;
}

.question_top,.teaching_top {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.teaching_top {
    margin-bottom: 28rpx;
    margin-right: 30rpx;
}

.teaching_title {
    color: #222;
    font-family: PingFangSC-Semibol;
    font-size: 32rpx;
    font-weight: 700;
    line-height: 32rpx;
}

.teaching_more {
    color: #50575d;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 28rpx;
}

.teaching_more_img {
    height: 20rpx;
    margin-left: 8rpx;
    width: 12rpx;
}

.hotspot_content {
    background: #fef8f3;
    border-radius: 20rpx;
    margin-left: 30rpx;
    padding: 30rpx 0;
    position: relative;
    width: 630rpx;
}

.hotspot_title {
    -webkit-line-clamp: 2;
    color: #000;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 32rpx;
    font-weight: 700;
    padding: 0 30rpx;
}

.hotspot_comment,.hotspot_title {
    -webkit-box-orient: vertical;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
}

.hotspot_comment {
    -webkit-line-clamp: 1;
    color: #828a93;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    font-weight: 400;
    margin: 20rpx 30rpx 0rpx 0;
    padding-left: 30rpx;
}

.vote_group {
    bottom: 24rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 0 30rpx;
    position: absolute;
}

.vote_btn_left,.vote_btn_right {
    color: #fefefe;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 36rpx;
    line-height: 84rpx;
    text-align: center;
}

.vote_btn_left {
    border-radius: 100rpx 0rpx 0rpx 100rpx;
    height: 84rpx;
    overflow: hidden;
    position: relative;
    width: 284rpx;
}

.vote_left_child {
    background: linear-gradient(270deg,#ffc75e 5%,#ff9c4c);
    border-radius: 0 16rpx 16rpx 0;
    height: 84rpx;
    left: -15rpx;
    position: absolute;
    transform: skew(-15deg);
    width: 284rpx;
}

.vote_left_text,.vote_right_text {
    left: 50%;
    line-height: 84rpx;
    position: absolute;
    top: 50%;
    transform: translate(-50%,-50%);
    white-space: nowrap;
    z-index: 9;
}

.vote_btn_right {
    border-radius: 0rpx 100rpx 100rpx 0rpx;
    height: 84rpx;
    overflow: hidden;
    position: relative;
    width: 284rpx;
}

.vote_right_child {
    background: linear-gradient(270deg,#449aff,#99d6f9);
    border-radius: 30rpx 100rpx 100rpx 30rpx;
    height: 84rpx;
    position: absolute;
    right: -15rpx;
    transform: skew(-15deg);
    width: 284rpx;
}

.vote_btn_img_left,.vote_btn_img_right {
    bottom: 0rpx;
    height: 124rpx;
    position: absolute;
    width: 325rpx;
}

.vote_btn_img_right {
    right: 0;
}

.vote_result {
    bottom: 28rpx;
    padding: 0 30rpx 0rpx;
    position: absolute;
}

.voted_result {
    display: flex;
    justify-content: space-between;
}

.voted_result_left,.voted_result_right {
    color: #ffa450;
    display: flex;
    flex-direction: row;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    font-weight: 400;
    justify-content: flex-start;
    letter-spacing: 0rpx;
}

.voted_result_right {
    color: #4da0fe;
}

.voted_num {
    color: #ffa450;
    display: flex;
    font-family: PingFangSC 0-Regular;
    font-size: 32rpx;
    justify-content: space-between;
    margin: 10rpx;
}

.voted_num_right {
    color: #4da0fe;
}

.voted_progress {
    display: flex;
    justify-content: space-between;
    width: 570rpx;
}

.vote_progress_left {
    border-radius: 100rpx 0rpx 0rpx 100rpx;
    box-shadow: 0 10rpx 20rpx 0 rgba(255,156,76,.3);
    height: 12rpx;
    overflow: hidden;
    position: relative;
}

.vote_progress_left_child {
    background: linear-gradient(270deg,#ffc75e 5%,#ff9c4c);
    height: 12rpx;
    left: -5rpx;
    position: absolute;
    transform: skew(-50deg);
}

.vote_progress_right {
    border-radius: 0rpx 100rpx 100rpx 0rpx;
    box-shadow: 0 10rpx 20rpx 0 rgba(68,153,255,.3);
    height: 12rpx;
    overflow: hidden;
    position: relative;
}

.vote_progress_right_child {
    background: linear-gradient(270deg,#449aff,#99d6f9);
    height: 12rpx;
    position: absolute;
    right: -5rpx;
    transform: skew(-50deg);
}

.swiper_dot {
    -webkit-backface-visibility: hidden;
    bottom: 5rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    left: calc(50% - 10rpx);
    position: absolute;
    -webkit-transform: translate3d(0,0,0);
}

.square_dot {
    background: rgba(0,0,0,.1);
    border-radius: 6rpx;
    height: 6rpx;
    margin-right: 12rpx;
    width: 16rpx;
}

.active {
    background: #ff8727;
    height: 6rpx;
    width: 24rpx;
}