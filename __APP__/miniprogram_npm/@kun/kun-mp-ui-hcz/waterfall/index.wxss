.waterfall-content-wrap {
    display: flex;
    padding-bottom: 100rpx;
    padding-top: 20rpx;
    position: relative;
}

.line-item {
    flex: 1 1 auto;
    flex-direction: column;
}

.line-item,.row-item {
    align-items: center;
    display: flex;
}

.row-item {
    border-radius: 16rpx;
    margin-bottom: 20rpx;
    overflow: hidden;
    position: relative;
    text-align: center;
}

.row-item,.row-item-wrap {
    justify-content: center;
}

.row-item-wrap {
    align-items: center;
    display: flex;
    height: 100%;
    width: 100%;
}

.demo-slot {
    height: 200rpx;
    width: 100%;
}

.video-list-media {
    border-radius: 16rpx;
    width: 100%;
}

.video-decoration-icon {
    height: 40rpx;
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    width: 40rpx;
}

.video-list-info {
    align-items: center;
    bottom: 20rpx;
    display: flex;
    left: 20rpx;
    position: absolute;
    z-index: 2;
}

.video-list-avatar {
    border-radius: 100%;
    height: 32rpx;
    margin-right: 8rpx;
    width: 32rpx;
}

.video-list-uesrname {
    color: #fff;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 24rpx;
    font-weight: 400;
    line-height: 24rpx;
}

.video-bottom-cover {
    background: linear-gradient(180deg,transparent,rgba(0,0,0,.8));
    bottom: 0;
    height: 60%;
    left: 0;
    position: absolute;
    width: 100%;
    z-index: 1;
}

.video-list-title {
    bottom: 72rpx;
    color: #fff;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 28rpx;
    font-weight: 400;
    left: 20rpx;
    line-height: 28rpx;
    max-height: 56rpx;
    overflow: hidden;
    position: absolute;
    text-align: left;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 90%;
    z-index: 2;
}

.bottom-tip-line {
    align-items: center;
    background-color: initial;
    bottom: 0;
    color: #999;
    display: flex;
    font-size: 28rpx;
    height: 100rpx;
    justify-content: center;
    left: 0;
    position: absolute;
    width: 100%;
    z-index: 99;
}

.loading-icon {
    height: 40rpx;
    margin-right: 20rpx;
    width: 40rpx;
}