.monthly-con {
    align-items: center;
    background: #fff;
    border-radius: 16px;
    box-sizing: border-box;
    display: flex;
    height: 72rpx;
    justify-content: space-between;
    margin: 30rpx auto 0;
    padding: 0 10rpx 0 20rpx;
    width: 690rpx;
}

.monthly-font {
    color: #f60;
    font-size: 30rpx;
    font-weight: 400;
    line-height: 30rpx;
}

.monthly-img {
    vertical-align: middle;
}

.monthly-img_right {
    height: 20rpx;
    margin: 0 16rpx 0 10rpx;
    width: 12rpx;
}

.monthly-img_close {
    height: 44rpx;
    width: 44rpx;
}

.monthly-right {
    align-items: center;
    display: flex;
}