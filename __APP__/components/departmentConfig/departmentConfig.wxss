.activity_item {
    border-radius: 20rpx;
    height: 170rpx;
    margin: 20rpx auto 0;
    overflow: hidden;
    width: 690rpx;
}

.activity_item_image {
    height: 100%;
    width: 100%;
}

.action_swiper_item {
    border-radius: 15rpx;
    height: 176rpx;
    overflow: hidden;
    width: 710rpx;
}

.action_swiper_img {
    height: 100%;
    width: 100%;
}

.list_head_text {
    margin-left: 14rpx;
}

.action_list_body {
    padding: 0 27rpx;
}

.action_list_item {
    border-bottom: 1rpx solid #e5e5e5;
    display: flex;
    padding: 27rpx 0;
}

.action_list_body .action_list_item:last-child {
    border-bottom: none;
}

.action_list_item_img {
    border-radius: 15rpx;
    height: 167rpx;
    width: 260rpx;
}

.action_list_item_image {
    border-radius: 15rpx;
    height: 100%;
    width: 260rpx;
}

.action_list_item_content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 14rpx;
    width: 100%;
}

.list_text_title {
    color: #272727;
    font-size: 36rpx;
    font-weight: 500;
    height: 36rpx;
    line-height: 36rpx;
}

.list_text_dec,.list_text_title {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 360rpx;
}

.list_text_dec {
    color: #9c9c9c;
    font-size: 26rpx;
    font-weight: 400;
    height: 26rpx;
    line-height: 26rpx;
    margin-top: 12rpx;
}

.list_content_btm {
    align-items: center;
    display: flex;
    justify-content: space-between;
}

.list_content_but {
    background: linear-gradient(270deg,#ffc75e,#ff9c4c);
    border-radius: 23rpx;
    color: #fff;
    font-size: 26rpx;
    height: 45rpx;
    line-height: 45rpx;
    text-align: center;
    width: 154rpx;
}