<view catch:touchmove="doNothingMove" class="container-popup {{show?'popup-show':''}} {{'k-popup-'+direction}} k-class" style="z-index:{{zIndex}};">
    <view class="container-bg k-bg-class"></view>
    <view catch:tap="onPopupTap" class="popup-content {{show?direction:''}} popup-fade-{{direction}}-active-{{transition===null?animation:transition?status:''}} k-panel-class" wx:if="{{show}}">
        <view catch:tap="doNothingTap">
            <slot></slot>
        </view>
    </view>
</view>
