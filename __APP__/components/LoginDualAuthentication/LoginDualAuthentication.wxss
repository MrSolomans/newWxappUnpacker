.dialog-container {
    background: #fff;
    border-radius: 16rpx;
    box-sizing: border-box;
    width: 560rpx;
}

.dialog-content {
    padding: 48rpx 40rpx 0;
}

.dialog-title {
    color: #222;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 44rpx;
}

.veri-code {
    margin-top: 20rpx;
}

.dialog-title-number {
    color: #ff6300;
}

.dialog-input {
    align-items: center;
    background: #f6f7f8;
    border-radius: 8px;
    box-sizing: border-box;
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-between;
    margin-top: 28rpx;
    padding: 24rpx;
}

.dialog-input input {
    font-size: 32rpx;
    height: 40rpx;
    width: 50%;
}

.dialog-input text {
    color: #657aab;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    font-weight: 400;
    height: 40rpx;
    text-align: right;
    width: 40%;
}

.dialog-btn-group {
    border-top: 1rpx solid #e5e5e5;
    color: #666;
    display: flex;
    font-family: PingFangSC-Medium;
    font-size: 32rpx;
    font-weight: 500;
    height: 100rpx;
    justify-content: space-between;
    margin-top: 49rpx;
    text-align: center;
    width: 100%;
}

.dialog-btn-group-column {
    width: 100%;
}

.dialog-btn-cancel {
    border-right: 1rpx solid #e5e5e5;
    color: #666;
}

.dialog-btn-cancel,.dialog-btn-confirm {
    align-items: center;
    display: flex;
    flex: 1;
    flex-direction: row;
    height: 100rpx;
    justify-content: center;
}

.dialog-btn-confirm {
    color: #ff6300;
}

.verir-res-txt {
    color: #ff3526;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    font-weight: 400;
    height: 40rpx;
    line-height: 40rpx;
    margin-top: 20rpx;
    padding-left: 8rpx;
}