.fb-container {
    margin: 0 auto;
    overflow-x: hidden;
    position: fixed;
    width: 100%;
    z-index: 10;
}

.follow-box {
    align-items: center;
    background-image: linear-gradient(180deg,#fff3e5,#ffdcb7 93%);
    border: 2rpx solid rgba(255,128,0,.27);
    border-radius: 16rpx;
    box-shadow: inset 0 6rpx 16rpx 0 hsla(0,0%,100%,.5);
    display: flex;
    flex-wrap: nowrap;
    height: 90rpx;
    margin: 0 auto;
    position: relative;
    width: 690rpx;
}

.fb-text {
    color: #c5370d;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 420rpx;
}

.fb-btn,.fb-text {
    font-family: PingFangSC-Regular;
    font-size: 25rpx;
    letter-spacing: 0;
}

.fb-btn {
    background-image: linear-gradient(90deg,#ff7634,#ff4218);
    border-radius: 28rpx;
    color: #fff;
    height: 46rpx;
    line-height: 46rpx;
    text-align: center;
    width: 120rpx;
}

.fb-icon {
    margin: 0 16rpx 0 24rpx;
}

.fb-icon,.fb-icon image {
    height: 66rpx;
    width: 66rpx;
}

.fb-close {
    position: absolute;
    right: 15rpx;
    top: 5rpx;
}

.fb-close,.fb-close image {
    height: 18rpx;
    width: 18rpx;
}

.update-follow-box {
    align-items: center;
    background-color: hsla(0,0%,100%,.95);
    border-radius: 16rpx;
    display: flex;
    flex-wrap: nowrap;
    height: 108rpx;
    margin: 0 auto;
    position: relative;
    width: 702rpx;
}

.update-fb-text {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 402rpx;
}

.update-fb-text .title {
    color: #222;
    font-family: PingFangSC-Medium;
    font-size: 32rpx;
    font-weight: 500;
    letter-spacing: 1.14rpx;
    line-height: 32rpx;
}

.update-fb-text .tips {
    color: #666;
    font-size: 24rpx;
    letter-spacing: 0.86rpx;
    line-height: 24rpx;
    margin-top: 12rpx;
}

.update-fb-btn,.update-fb-text .tips {
    font-family: PingFangSC-Regular;
    font-weight: 400;
}

.update-fb-btn {
    background-color: #ff6300;
    border-radius: 45rpx;
    color: #fff;
    font-size: 28rpx;
    height: 56rpx;
    letter-spacing: 0;
    line-height: 56rpx;
    text-align: center;
    width: 160rpx;
}

.update-fb-icon {
    margin: 0 16rpx 0 24rpx;
}

.update-fb-icon,.update-fb-icon image {
    height: 76rpx;
    width: 76rpx;
}