.teaching_top {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin: 0 30rpx;
    padding: 28rpx 0;
}

.teaching_title {
    color: #222;
    font-family: PingFangSC-Semibold,PingFang SC;
    font-size: 32rpx;
    font-weight: 600;
    line-height: 32rpx;
}

.teaching_more {
    color: #50575d;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 28rpx;
    margin-top: 2rpx;
}

.teaching_more_img {
    height: 20rpx;
    margin-left: 8rpx;
    width: 12rpx;
}

.Old_driver_content {
    margin-left: 30rpx;
    overflow: hidden;
    white-space: nowrap;
}

.Old_driver_wrap {
    background: #fff;
    border-radius: 20rpx;
    margin: 20rpx auto 0;
    padding-bottom: 30rpx;
    width: 690rpx;
}

.Old_driver {
    background: #f8fafc;
    border-radius: 20rpx;
    box-sizing: border-box;
    display: inline-block;
    height: 308rpx;
    margin-right: 10rpx;
    overflow: hidden;
    padding: 20rpx 30rpx 60rpx;
    position: relative;
    width: 576rpx;
}

.old_driver_hidden {
    height: 218rpx;
    overflow: hidden;
}

.Old_driver_answers,.Old_driver_question {
    align-items: center;
    display: flex;
    flex-direction: row;
}

.Old_driver_question {
    margin-bottom: 20rpx;
}

.Old_driver_answers_img,.Old_driver_question_img {
    background: #ffead9;
    border-radius: 4rpx;
    color: #ff8727;
    font-size: 22rpx;
    height: 32rpx;
    line-height: 32rpx;
    margin-right: 16rpx;
    margin-top: -4rpx;
    text-align: center;
    width: 32rpx;
}

.Old_driver_answers_img {
    background: #d4ebff;
    color: #269dff;
}

.Old_driver_question_text {
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    color: #222;
    display: -webkit-box;
    font-family: PingFangSC-Medium,PingFang SC;
    font-size: 32rpx;
    font-weight: 500;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: pre-line;
    width: 468rpx;
    word-break: break-all;
}

.Old_driver_answers_GradeImg_box {
    background: #f6f7f8;
    border: 1px solid #e5e5e5;
    border-radius: 18rpx;
    display: flex;
    height: 32rpx;
    margin-left: 40rpx;
    padding-right: 15rpx;
    width: auto;
}

.Old_driver_answers_GradeImg {
    border-radius: 50%;
    height: 32rpx;
    margin-left: 8rpx;
    min-width: 28rpx;
    width: 28rpx;
}

.Old_driver_answers_personImg {
    border-radius: 50%;
    height: 40rpx;
    min-width: 40rpx;
    width: 40rpx;
}

.Old_driver_answers_personName {
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    color: #828a93;
    display: -webkit-box;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 24rpx;
    font-weight: 400;
    margin-left: 8rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: pre-line;
    word-break: break-all;
}

.grade_name {
    color: #666;
    font-size: 22rpx;
    margin-left: 5rpx;
}

.Old_driver_answers_medalImg {
    height: 32rpx;
    margin-left: 22rpx;
    min-width: 32rpx;
    width: 32rpx;
}

.Old_driver_answers_content {
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-wrap: break-word;
    color: #50575d;
    display: -webkit-box;
    font-size: 28rpx;
    height: 72rpx;
    line-height: 38rpx;
    margin-bottom: 30rpx;
    margin-left: 48rpx;
    margin-top: 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: pre-line;
    width: 468rpx;
    word-break: break-all;
}

.look_num,.question_num {
    bottom: 30rpx;
    color: #828a93;
    font-size: 24rpx;
    line-height: 24rpx;
    position: absolute;
}

.question_num {
    left: 30rpx;
}

.look_num {
    right: 30rpx;
}